
<odoo>
    <data>
       <!-- ACTIVO FIJO -->
    <record model="ir.ui.view" id="soe_fixed_assets.asset_list">
      <field name="name">fixed assets asset list</field>
      <field name="model">soe_fixed_assets.asset</field>
      <field name="arch" type="xml" >
        <list >
          <field name="code"/>
          <field name="name"/>
          <field name="description"/>
          <field name="cost"/>
          <field name="loan_status" widget="badge"
                    decoration-danger="loan_status == 'unavailable'"
                   decoration-primary="loan_status == 'available'"/>

          <field name="acquisition_detail_id" widget="badge"
                    decoration-danger="acquisition_detail_id == 'null'"
                   decoration-success="acquisition_detail_id != False"/>

          <header>
            <button name="action_return_asset" type="object" string="Recibir Acitvo Fijo" class="oe_highlight"/>
            <button name="action_ver_acta" type="object" string="Ver Acta de RecepciÃ³n" class="oe_highlight"/>
        </header>
        </list>

      </field>
    </record>

    <record model="ir.ui.view" id="soe_fixed_assets.asset_form">
      <field name="name">fixed assets asset form</field>
      <field name="model">soe_fixed_assets.asset</field>
      <field name="arch" type="xml">
        <form >
          <group>
          <field name="code"/>
          <field name="name"/>
          <field name="brand"/>
          <field name="description"/>
          <field name="cost"/>
          <field name="area_id"/>
          <field name="group_id"/>
          <field name="measure_id"/>
          <field name="quality_id"/>
          <field name="manager_id"/>
          </group>
        </form>
      </field>
    </record>


    </data>
</odoo>