<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="soe_fixed_assets.technical_report_requests_detail_list">
          <field name="name">fixed assets technical report request detail list</field>
          <field name="model">soe_fixed_assets.technical_report_request_detail</field>
          <field name="arch" type="xml">
            <list>
                <header>
                    <button name="action_ver_solicitud" type="object" string="Ver Solicitud de Inf. Tecnico" class="oe_highlight"/>
                    <button name="action_recibir_informe" type="object" string="Mantenimiento" class="btn-warning" confirm="¿Estás seguro de que deseas dar de mantenimiento a este activo fijo? Esta acción no se puede deshacer."/>
                    <button name="action_recibir_informe" type="object" string="Dar de baja" class="btn-danger"  confirm="¿Estás seguro de que deseas dar de baja a este activo fijo? Esta acción no se puede deshacer."/>
                </header>
                <field name="technical_report_request_id" string="Nro Cite Solicitud"/>
                <field name="asset_id"/>
                <field name="technical_report_status" widget="badge"
                   decoration-warning="technical_report_status == 'requested'"
                   decoration-success="technical_report_status == 'received'"/>
            </list>

          </field>
        </record>

    </data>
</odoo>