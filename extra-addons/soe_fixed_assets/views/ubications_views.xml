<odoo>
    <data>
       <!-- UBICATIONS -->
    <record model="ir.ui.view" id="soe_fixed_assets.ubications_list">
      <field name="name">fixed assets ubications list</field>
      <field name="model">soe_fixed_assets.ubications</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="address"/>
          <field name="id_manager"/>
          <field name="area_id" string="Areas"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="soe_fixed_assets.ubications_form">
      <field name="name">fixed assets ubications form</field>
      <field name="model">soe_fixed_assets.ubications</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="address"/>
            <field name="id_manager"/>
            <field name="area_id" string="Areas"/>

          </group>
        </form>
      </field>
    </record>


    </data>
</odoo>